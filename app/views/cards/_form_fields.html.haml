.form-inputs
  %span= f.input :name
  .description
    %span= f.input :description, as: :text, :input_html => { :cols => 50, :rows => 4 }
    %span
      = link_to 'Amazon search', '#search_modal', data: { toggle: 'modal'}, class: 'btn'
  .clearfix
  = f.input :web_link
  .image
    = f.input :image
    = f.input :remote_image_url, as: :hidden
    %img#remote_image_preview
    = link_to 'Select other image', '#', id: 'select_other_image', class: 'hidden btn'
  = f.input :price