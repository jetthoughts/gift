= simple_form_for(@card, url: [@project, :cards]) do |f|
  .form-errors
    = render "shared/error_messages", :target => @card
  .form-inputs
    .description
      %span= f.input :description#, :placeholder => t('placeholders.defaults.description')
      %span= f.button :button, 'Amazon search'
    .clearfix
    = f.input :web_link
    .image
      = f.file_field :image
      = f.hidden_field :image_cache
    = f.input :price

  .form-actions
    = f.button :submit, t('simple_form.add_gift')