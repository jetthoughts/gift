= render "shared/error_messages", :target => invite
.email_participant
  = t('general.invites.participant')
  = text_field_tag 'invites[][name]', invite.name, :placeholder => t('general.invites.name')
  = text_field_tag 'invites[][phone]', invite.phone, :placeholder => t('general.invites.phone')
  = link_to t('general.invites.remove'), '#',  class: 'btn remove_email_participant hidden'