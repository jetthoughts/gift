%p
  .row
    .span4
      - if @project.closed
        .closed
          Project closed
      - else
        = format_total_amount(@project.donated_amount)
      %span= image_tag @project.image
      %br
      %span= @project.name
      %br
      %span= @project.description
    .span8
      .btn.pull-right
        = link_to 'Invites', [:new, @project, :invite]
      - if can? :edit, @project
        .btn.pull-right
          = link_to 'Edit project', edit_project_path(@project)
      - if can? :close, @project and !@project.closed
        .btn.pull-right
          = link_to 'Close project', nil, id: 'close_project'
      %br
      %br
      %br

  %hr
  .row
    .span8
      - unless @project.cards.blank?
        = render @project.cards.ordered_by_date
      - else
        No any gifts

    .span4
      .btn.pull-right.clear-right
        = link_to 'Engage', new_project_fee_url(@project)
      - if can? :create, @project.cards.build
        .btn.pull-right.clear-right
          = link_to 'Add gift suggestion', new_project_card_path(@project)

      = render 'update_notifications'

  .clearfix
  - if can? :show, @project.comments.build
    %hr
      - if can? :create, @project.comments.build
        = render 'comments/form'
      #comments
        = render @project.comments.ordered_by_date

#close_project_dialog{ title: 'You are closing the project' }
  %p
    = format_close_dialog_message @project
