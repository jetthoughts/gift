%p#notice= notice

%p
  .row
    .span4
      %span= @project.name
      <br/>
      %span= @project.description
    .span8
      .btn.pull-right
        = link_to 'Profile', @project.user
      .btn.pull-right
        = link_to 'Edit project', edit_project_path(@project)
      .btn.pull-right
        = link_to 'Close project'

  %hr
  .row
    .span10
      %div
        gift image, name, price, web link here
    .span2
      .btn.pull-right.clear-right
        = link_to 'Donate'
      .btn.pull-right.clear-right
        = link_to 'Add gift suggestion'

  %hr
  .btn
    = link_to 'Add comment'
