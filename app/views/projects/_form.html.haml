= simple_form_for(@project) do |f|
  = f.error_notification

  .form-inputs.left
    = f.input :name
    = f.input :description
    = f.input :article_link    
    = f.input :participants_add_own_suggestions, as: :boolean
    = f.input :attachment_id, :as => :hidden
  .right
    = image_tag @project.image, :width => 300, :id => :avatar_image
    = link_to 'Upload photo', '#', :id => 'upload_button'
  .clear
  #end-type.accordeon
    .accordion-group.form-inputs
      %div{ class: 'accordion-heading' }
        = label_tag(nil, class: 'accordion-toggle', data: { target: '#fixed-amount-collapse', toggle: 'collapse', parent: '#end-type' }) do
          = f.radio_button :end_type, :fixed_amount
          Earn up to fixed amount
      #fixed-amount-collapse.collapse.accordion-body{ class: f.object.fixed_amount? && 'in' }
        = f.input :fixed_amount

    .accordion-group.form-inputs
      %div{ class: 'accordion-heading' }
        =label_tag(nil, class: 'accordion-toggle', data: { target: '#open-end-collapse', toggle: 'collapse', parent: '#end-type' }) do
          = f.radio_button :end_type, :open_end
          Gather with OpenEnd
      #open-end-collapse.collapse.accordion-body{ class: f.object.open_end? && 'in' }
        %p
          No fixed amount to achieve.

  .form-inputs
    = f.input :deadline, input_html: { class: 'datetimepicker' }

    = f.input :paid_type, as: :radio_buttons do
      - f.collection_radio_buttons :paid_type, Project::PAID_TYPES, :to_s, lambda { |p| p.to_s.humanize } do |b|
        = b.label(class: 'radio inline') { b.radio_button + b.text }

    %span{class: 'project_paid_type_pay_pal'}
      = text_field_tag 'project[paid_info][paypal_email]', nil, placeholder: "PayPal email", class: 'hidden'

    %span{class: 'project_paid_type_money_transfer'}
      = text_field_tag 'project[paid_info][name]', nil, placeholder: "Name", class: 'hidden'
      = text_field_tag 'project[paid_info][creditcard_number]', nil, placeholder: "Credit card number", class: 'hidden'
      = text_field_tag 'project[paid_info][creditcard_cvv]', nil, placeholder: "CVV", class: 'hidden'

    %span{class: 'project_paid_type_amazon_voucher'}
      = text_field_tag 'project[paid_info][person_name]', nil, placeholder: "Person's Name", class: 'hidden'
      = text_field_tag 'project[paid_info][destination_name]', nil, placeholder: "Name of the Destination", class: 'hidden'
      = text_field_tag 'project[paid_info][destination_address]', nil, placeholder: "Destination Address", class: 'hidden'

  .form-actions
    = f.button :submit
= content_for :javascript_code do
  ="PhotoUpload.initialize('#{attachment_url(current_user.attachment ||  Attachment.new)}');"